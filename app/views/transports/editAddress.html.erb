<div class="container" style="">
  <% if @posting[:enterprise] == '1' %>

      <div id="marketBanner"><%= t(:market) %></div>
  <% end %>
  <div class='col-lg-8'>
    <%= form_for @address, url: posting_create_address_url, method: :post do |f| %>
        <script src="https://maps.googleapis.com/maps/api/js?v=3&libraries=places,geometry?key=AIzaSyAim9hgtYAZ6YGOabhLc3rVvcjGYwpU3cc"></script>

        <div id="googlemaps" style="height: 600px; width: 600px;border: black">
          <%= requirejs_include_tag 'addLocation' %>

        </div>
        <% if @posting[:types] == 'transportation' %>
            <div class="form-group">
              <%= f.label 'From' %><br>
              <%= f.text_field :address_1, class: 'form-control' %><br>
            </div>
            <div class="form-group">
              <%= f.label 'To' %><br>
              <%= f.text_field :address_2, class: 'form-control' %><br>
            </div>
        <% else %>
            <div class="form-group">
              <%= f.label 'Address' %><br>
              <%= f.text_field :address_1, class: 'form-control' %><br>
            </div>
        <% end %>
        <%= f.hidden_field :lat %>
        <%= f.hidden_field :lng %>
        <%= f.submit 'Next', class: 'btn' %>
    <% end %>
  </div>
</div>
